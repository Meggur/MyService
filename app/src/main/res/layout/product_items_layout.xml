<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rc_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название товара"
            android:textAlignment="center"
            android:textSize="26sp"/>

        <ImageView
            android:id="@+id/rc_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/rc_product_name"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        
        <TextView
            android:id="@+id/rc_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rc_product_image"
            android:text="Цена товара"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/rc_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rc_product_price"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Описание товара"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>